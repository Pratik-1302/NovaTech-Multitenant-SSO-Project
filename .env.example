# =============================================================================
# Environment Variables Template for NovaTech SSO Management System
# =============================================================================
# Copy this file to .env for local development
# NEVER commit .env files to version control!
# =============================================================================

# =============================================================================
# Application Configuration
# =============================================================================
SPRING_PROFILES_ACTIVE=dev
PORT=8080

# =============================================================================
# Database Configuration (Local Development)
# =============================================================================
# For local PostgreSQL
DATABASE_URL=jdbc:postgresql://localhost:5432/novatech_db
DB_USERNAME=postgres
DB_PASSWORD=admin
DB_POOL_SIZE=10

# =============================================================================
# Custom Domain Configuration (Production Only)
# =============================================================================
# Your custom domain
CUSTOM_DOMAIN=pratiktech.cloud

# Allowed origins for CORS (comma-separated, no spaces)
ALLOWED_ORIGINS=https://pratiktech.cloud,https://www.pratiktech.cloud

# =============================================================================
# Security Settings
# =============================================================================
# Enable secure cookies in production (set to true when using HTTPS)
COOKIE_SECURE=false

# =============================================================================
# Logging Configuration
# =============================================================================
# Show SQL queries in console (true for development, false for production)
SHOW_SQL=true

# SQL logging level
SQL_LOGGING=DEBUG

# =============================================================================
# Thymeleaf Configuration
# =============================================================================
# Cache templates (false for development, true for production)
THYMELEAF_CACHE=false

# =============================================================================
# Error Handling
# =============================================================================
# Show stack traces (on-param for development, never for production)
SHOW_STACKTRACE=on-param

# =============================================================================
# SSO Provider Configuration (Optional - Managed via Admin Dashboard)
# =============================================================================
# These are optional - SSO configurations are stored in the database
# and managed through the admin dashboard. Only set these if you want
# to pre-configure providers via environment variables.

# Example: OIDC Provider
# OIDC_CLIENT_ID=your-oidc-client-id
# OIDC_CLIENT_SECRET=your-oidc-client-secret
# OIDC_ISSUER=https://your-oidc-provider.com

# Example: SAML Provider
# SAML_ENTITY_ID=https://pratiktech.cloud/saml/metadata
# SAML_SSO_URL=https://your-idp.com/sso/saml

# Example: JWT Provider
# JWT_ISSUER=https://your-jwt-provider.com
# JWT_CERTIFICATE_PATH=classpath:jwt_certificate.cer

# =============================================================================
# Java Options (Production Only)
# =============================================================================
# Memory settings for production deployment
# JAVA_OPTS=-Xmx512m -Xms256m -XX:+UseG1GC -XX:MaxGCPauseMillis=200
